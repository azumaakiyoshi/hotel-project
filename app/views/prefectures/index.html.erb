<p>都道府県の一覧</p>
<%= search_form_for @q do |f| %>

<%= f.label :都道府県名 %>
  <%= f.search_field :name_cont %>
  <%= f.submit '検索', class: "btn btn-primary" %>
<% end %>
<div class="container">
      <div class="row">
<% @prefectures.each do |prefecture| %>
        <div class="col-md-3">
          <div class="card">
            <img src="<%=prefecture.picture_url%>" class="card-img-top" alt="<%=prefecture.picture  %>">
            <div class="card-body">
              <h5 class="card-title"><%= prefecture.name %></h5>
            </div>
            <div class="card-footer">
            <small class="text-muted"><%= link_to '詳細',prefecture_path(prefecture) %></small>
            </div>
          </div> 
        </div>
 <% end %>
 </div>
    </div>